<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LargeTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center|start</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="MediumTitle" parent="LargeTitle">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="SmallTitle" parent="LargeTitle">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:layout_marginTop">@dimen/normal_margin_size</item>
    </style>

    <style name="SmallPlayButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/small_play_button_size</item>
        <item name="android:layout_height">@dimen/small_play_button_size</item>
        <item name="android:background">@drawable/play_button</item>
        <item name="android:src">@drawable/ic_play</item>
    </style>

    <style name="NormalPlayButton" parent="SmallPlayButton">
        <item name="android:layout_width">@dimen/normal_button_size</item>
        <item name="android:layout_height">@dimen/normal_button_size</item>
        <item name="android:src">@drawable/ic_normal_play</item>
    </style>

    <style name="NormalLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="NormalLabelWithoutEllipSize" parent="NormalLabel">
        <item name="android:maxLines" />
        <item name="android:ellipsize">none</item>
    </style>

    <style name="TextRating" parent="NormalLabel">
        <item name="android:drawableEnd">@drawable/ic_star</item>
        <item name="android:drawablePadding">@dimen/small_padding_size</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>


    <style name="SmallCardImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/small_card_height</item>
    </style>

    <style name="NormalCardImageView" parent="SmallCardImageView">
        <item name="android:layout_height">@dimen/normal_card_height</item>
        <item name="android:layout_width">@dimen/normal_card_height</item>
    </style>

    <style name="GalleryCardDetails">
        <item name="android:layout_width">@dimen/gallery_card_width</item>
        <item name="android:layout_height">@dimen/gallery_card_height</item>
        <item name="android:layout_marginTop">@dimen/medium_margin_size</item>
        <item name="android:layout_marginBottom">@dimen/normal_margin_size</item>
        <item name="android:layout_marginHorizontal">@dimen/normal_margin_size</item>
        <item name="android:clickable">true</item>
        <item name="roundPercent">0.11</item>
        <item name="layout_constraintDimensionRatio">9:16</item>
    </style>


    <style name="MovieRecyclerOfDetails">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">@dimen/normal_padding_size</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="layout_constraintTop_toBottomOf">@+id/textViewHeader</item>
    </style>

    <style name="GalleryRecyclerOfDetails" parent="MovieRecyclerOfDetails" />

    <style name="PersonRecyclerOfMovieDetails" parent="MovieRecyclerOfDetails" />

    <style name="GridRecycler" parent="MovieRecyclerOfDetails">
        <item name="android:layout_height">0dp</item>
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
        <item name="android:orientation">vertical</item>
        <item name="spanCount">3</item>
    </style>

    <style name="CircularImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/normal_button_size</item>
        <item name="android:layout_height">@dimen/normal_button_size</item>
        <item name="android:background">@drawable/rounded_clickable</item>
        <item name="android:layout_marginHorizontal">@dimen/medium_margin_size</item>
        <item name="android:layout_marginTop">@dimen/medium_margin_size</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

</resources>