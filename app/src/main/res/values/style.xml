<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LargeTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center|start</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="MediumTitle" parent="LargeTitle">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="SmallTitle" parent="LargeTitle">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:layout_marginTop">@dimen/normal_margin_size</item>
    </style>

    <style name="SmallPlayButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/small_play_button_size</item>
        <item name="android:layout_height">@dimen/small_play_button_size</item>
        <item name="android:background">@drawable/fab_play_button</item>
        <item name="android:src">@drawable/ic_play</item>
        <item name="android:drawableStart">@drawable/ic_play</item>
        <item name="android:padding">@dimen/medium_padding_size</item>
    </style>

    <style name="NormalLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="SmallCardImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/small_card_image_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>