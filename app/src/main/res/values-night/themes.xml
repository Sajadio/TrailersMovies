<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application appSettings. -->
    <style name="Theme.Movie" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/redLight</item>
        <item name="colorPrimaryVariant">@color/blackDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/redLight</item>
        <item name="colorSecondaryVariant">@color/redLight</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowActionBarOverlay">true</item>


        <!-- Customize your appSettings here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowContentTransitions">true</item>

        <!-- custom colors-->
        <item name="mainColor">@color/blackDark</item>
        <item name="secondColor">@color/blackLight</item>
        <item name="viewColor">#353535</item>
        <item name="textColor">@color/white</item>
        <item name="textColorHint">@color/whiteLight</item>
        <item name="colorIcons">@color/white</item>
        <item name="customColorToolbar">#00000000</item>
        <item name="expandedTitleColor">@color/white</item>
        <item name="collapsedTitleColor">@color/white</item>

        <item name="android:windowAnimationStyle">@style/windowAnimationTransition</item>
    </style>

    <!-- Customize Toolbar style -->
    <style name="MyThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="icon">@color/white</item>
    </style>

</resources>