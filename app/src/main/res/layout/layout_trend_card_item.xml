<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.sajjadio.trailers.data.model.movie.trend.TrendResult" />

        <variable
            name="listener"
            type="com.sajjadio.trailers.ui.home.adapter.HomeInteractListener" />

        <variable
            name="imageSize"
            type="com.sajjadio.trailers.utils.Constant" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="@dimen/size_8"
            android:onClick="@{() -> listener.onClickItem(item.id)}"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/popcorn1"
                android:contentDescription="@string/app_name"/>

            <ImageView
                android:id="@+id/poster"
                android:layout_width="@dimen/showcase_height4"
                android:layout_height="@dimen/showcase_height3"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                app:imageSize="@{imageSize.IMAGE_Size_ORIGINAL}"
                app:setImage="@{item.backdrop_path}"
                tools:src="@drawable/ic_launcher_background" />

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>