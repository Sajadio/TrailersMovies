<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.sajjadio.trailers.domain.model.Poster" />

        <variable
            name="listener"
            type="com.sajjadio.trailers.ui.person.adapter.PersonDetailsInteractListener" />


        <variable
            name="imageSize"
            type="com.sajjadio.trailers.utils.Constant" />

    </data>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        style="@style/GalleryCard"
        android:onClick="@{() -> listener.onClickGalleryItem()}"
        app:imageSize="@{imageSize.IMAGE_Size_780}"
        app:imageUrl="@{item.filePath}"
        tools:src="@drawable/ic_launcher_background" />
</layout>