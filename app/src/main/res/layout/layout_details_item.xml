<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.sajjadio.trailers.data.model.movie.id.IDMovie" />


        <variable
            name="imageSize"
            type="com.sajjadio.trailers.utils.Constant" />

        <import type="com.sajjadio.trailers.utils.FormatKt" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/secondColor"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@color/black"
            android:backgroundTint="@color/black"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarLayout"
                style="@style/Headline5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:fitsSystemWindows="true"
                app:collapsedTitleTextColor="?attr/collapsedTitleColor"
                app:contentScrim="?attr/mainColor"
                app:expandedTitleTextColor="?attr/expandedTitleColor"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/popcorn1"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintBottom_toBottomOf="@+id/poster"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/backgroundPath"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    app:imageUrl="@{item.backdrop_path}"
                    app:imageSize="@{imageSize.IMAGE_Size_H632}"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    tools:ignore="VectorDrawableCompat"
                    tools:src="@drawable/ic_launcher_background" />

                <View
                    android:id="@+id/cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_shadow" />

                <ImageView
                    android:id="@+id/posterPath"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/showcase_height2"
                    android:layout_gravity="start|bottom"
                    android:contentDescription="@string/app_name"
                    app:imageSize="@{imageSize.IMAGE_Size_500}"
                    app:imageUrl="@{item.poster_path}"
                    app:layout_constraintBottom_toBottomOf="@+id/poster"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/playVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_youtube" />

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/transparent"
                    android:minHeight="?attr/actionBarSize"
                    app:layout_collapseMode="pin" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/generes"
                    style="@style/Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_12"
                    android:layout_marginTop="@dimen/size_16"
                    android:background="@drawable/background_gray"
                    android:ellipsize="end"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:padding="@dimen/size_8"
                    android:textColor="?attr/textColorHint"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Action | Drama | Crime" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_time"
                    style="@style/Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_16"
                    android:background="@drawable/background_gray"
                    android:drawableEnd="@drawable/ic_baseline_access_time_24"
                    android:drawablePadding="@dimen/size_4"
                    android:gravity="center"
                    android:padding="@dimen/size_8"
                    android:text="@{FormatKt.formatHourMinutes(item.runtime)}"
                    android:textColor="?attr/textColorHint"
                    app:layout_constraintStart_toStartOf="@+id/generes"
                    app:layout_constraintTop_toBottomOf="@+id/generes"
                    tools:text="2h 46m" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/rate"
                    style="@style/Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/size_8"
                    android:background="@drawable/background_gray"
                    android:drawableEnd="@drawable/ic_baseline_star_18"
                    android:drawablePadding="@dimen/size_4"
                    android:gravity="center"
                    android:padding="@dimen/size_8"
                    android:text="@{item.vote_average + ``}"
                    android:textColor="?attr/textColorHint"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_time"
                    app:layout_constraintStart_toEndOf="@+id/tv_time"
                    app:layout_constraintTop_toTopOf="@+id/tv_time"
                    tools:text="4.5 " />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/date"
                    style="@style/Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/size_8"
                    android:background="@drawable/background_gray"
                    android:gravity="center"
                    android:padding="@dimen/size_8"
                    android:text="@{item.release_date}"
                    android:textColor="?attr/textColorHint"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_time"
                    app:layout_constraintStart_toEndOf="@+id/rate"
                    app:layout_constraintTop_toTopOf="@+id/tv_time"
                    tools:text="2020" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/description"
                    style="@style/Body2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="start|center"
                    android:text="@{item.overview}"
                    android:textColor="?attr/textColorHint"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/generes"
                    app:layout_constraintTop_toBottomOf="@+id/date"
                    tools:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here " />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>