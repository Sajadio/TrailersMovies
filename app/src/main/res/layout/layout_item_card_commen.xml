<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/popularCard"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="5dp"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="?attr/secondColor"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/posterPopular"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img" />

            <ImageView
                android:id="@+id/coverMSImg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#74000000"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="@+id/posterPopular"
                app:layout_constraintEnd_toEndOf="@+id/posterPopular"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/posterPopular"
                app:layout_constraintTop_toTopOf="@+id/posterPopular"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/titleMS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:layout_marginStart="8dp"
                android:gravity="start|center"
                android:textColor="?attr/textColor"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/posterPopular"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Tome Hairy" />

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:gravity="start|center"
                android:textColor="?attr/textColorHint"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/titleMS"
                app:layout_constraintTop_toBottomOf="@+id/titleMS"
                tools:text="Action, Comedy, Drama" />

            <RatingBar
                android:id="@+id/rating"
                style="@style/CustomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:isIndicator="false"
                android:numStars="5"
                app:layout_constraintStart_toStartOf="@+id/type"
                app:layout_constraintTop_toBottomOf="@+id/type"
                tools:rating="3.5" />

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:gravity="start|center"
                android:textColor="?attr/textColorHint"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/rating"
                app:layout_constraintStart_toStartOf="@+id/titleMS"
                app:layout_constraintTop_toBottomOf="@+id/rating"
                tools:text="2022" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnNotFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:background="#00000000"
                android:src="@drawable/ic_baseline_favorite_border_24"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:background="#00000000"
                android:src="@drawable/ic_baseline_favorite_24"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>