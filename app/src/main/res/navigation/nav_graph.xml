<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.trailers.ui.fragment.home.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_genresFragment"
            app:destination="@id/genresFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_homeFragment_to_moiveFragment"
            app:destination="@id/moiveFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_homeFragment_to_commonFragment"
            app:destination="@id/commonFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right">
            <argument
                android:name="id"
                app:argType="integer" />

        </action>
        <action
            android:id="@+id/action_homeFragment_to_bottomSheet"
            app:destination="@id/bottomSheet" />
    </fragment>
    <fragment
        android:id="@+id/genresFragment"
        android:name="com.example.trailers.ui.fragment.genres.GenresFragment"
        android:label="CategoriesFragment">
        <action
            android:id="@+id/action_genresFragment_to_moiveFragment"
            app:destination="@id/moiveFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.trailers.ui.fragment.search.SearchFragment"
        android:label="SearchFragment">
        <action
            android:id="@+id/action_searchFragment_to_moiveFragment"
            app:destination="@id/moiveFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>
    <fragment
        android:id="@+id/moiveFragment"
        android:name="com.example.trailers.ui.fragment.movie.MovieFragment"
        android:label="MoiveFragment">

        <argument
            android:name="id"
            app:argType="integer" />
        <action
            android:id="@+id/action_moiveFragment_to_similarFragment"
            app:destination="@id/similarFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_moiveFragment_to_videoPlayActivity"
            app:destination="@id/videoPlayActivity"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/similarFragment"
        android:name="com.example.trailers.ui.fragment.movie.SimilarFragment"
        android:label="SimilarFragment">
        <action
            android:id="@+id/action_similarFragment_to_moiveFragment"
            app:destination="@id/moiveFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <activity
        android:id="@+id/videoPlayActivity"
        android:name="com.example.trailers.ui.fragment.movie.VideoPlayActivity"
        android:label="VideoPlayActivity">
        <argument
            android:name="url"
            app:argType="string" />
    </activity>
    <fragment
        android:id="@+id/commonFragment"
        android:name="com.example.trailers.ui.fragment.common.CommonFragment"
        android:label="PopularFragment">
        <action
            android:id="@+id/action_commonFragment_to_moiveFragment"
            app:destination="@id/moiveFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <argument
            android:name="id"
            app:argType="integer" />

    </fragment>
    <dialog
        android:id="@+id/bottomSheet"
        android:name="com.example.trailers.ui.fragment.home.BottomSheetFragment"
        android:label="BottomSheet" >
        <action
            android:id="@+id/action_bottomSheet_to_genresFragment"
            app:destination="@id/genresFragment" />
    </dialog>

</navigation>