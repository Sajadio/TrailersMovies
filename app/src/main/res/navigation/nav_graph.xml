<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <action
        android:id="@+id/action_trendFragment_to_movieFragment"
        app:destination="@+id/movieFragment"
        app:launchSingleTop="true" />

    <action
        android:id="@+id/action_popularFragment_to_movieFragment"
        app:destination="@+id/movieFragment"
        app:launchSingleTop="true" />

    <action
        android:id="@+id/action_ratedFragment_to_movieFragment"
        app:destination="@+id/movieFragment"
        app:launchSingleTop="true" />

    <action
        android:id="@+id/action_upComingFragment_to_movieFragment"
        app:destination="@+id/movieFragment"
        app:launchSingleTop="true" />

    <action
        android:id="@+id/action_popularFragment_to_commonFragment"
        app:destination="@+id/commonFragment"
        app:launchSingleTop="true"/>

    <action
        android:id="@+id/action_ratedFragment_to_commonFragment"
        app:destination="@+id/commonFragment"
        app:launchSingleTop="true" />

    <action
        android:id="@+id/action_upComingFragment_to_commonFragment"
        app:destination="@+id/commonFragment"
        app:launchSingleTop="true"/>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sajjadio.trailers.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_movieFragment"
            app:destination="@id/movieFragment" />
        <action
            android:id="@+id/action_homeFragment_to_commonFragment"
            app:destination="@id/commonFragment" />
    </fragment>
    <fragment
        android:id="@+id/genresFragment"
        android:name="com.sajjadio.trailers.ui.genres.GenresFragment"
        android:label="CategoriesFragment">
        <action
            android:id="@+id/action_genresFragment_to_movieFragment"
            app:destination="@id/movieFragment"/>
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.sajjadio.trailers.ui.search.SearchFragment"
        android:label="SearchFragment">
        <action
            android:id="@+id/action_searchFragment_to_movieFragment"
            app:destination="@id/movieFragment" />

    </fragment>
    <fragment
        android:id="@+id/movieFragment"
        android:name="com.sajjadio.trailers.ui.details.DetailsFragment"
        android:label="MoiveFragment">

        <argument
            android:name="id"
            app:argType="integer" />
        <action
            android:id="@+id/action_movieFragment_to_similarFragment"
            app:destination="@id/similarFragment" />
        <action
            android:id="@+id/action_movieFragment_to_actorsFragment"
            app:destination="@id/actorsFragment"/>
    </fragment>
    <fragment
        android:id="@+id/similarFragment"
        android:name="com.sajjadio.trailers.ui.similar.SimilarFragment"
        android:label="SimilarFragment">
        <action
            android:id="@+id/action_similarFragment_to_movieFragment"
            app:destination="@id/movieFragment" />
        <argument
            android:name="iDMovie"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/commonFragment"
        android:name="com.sajjadio.trailers.ui.common.CommonFragment"
        android:label="PopularFragment">
        <action
            android:id="@+id/action_commonFragment_to_movieFragment"
            app:destination="@id/movieFragment"/>

        <argument
            android:name="id"
            app:argType="integer" />

    </fragment>

    <fragment
        android:id="@+id/actorsFragment"
        android:name="com.sajjadio.trailers.ui.actors.ActorsFragment"
        android:label="ActorsFragment">
        <action
            android:id="@+id/action_actorsFragment_to_movieFragment"
            app:destination="@id/movieFragment"/>
    </fragment>

</navigation>